#!/usr/bin/env bash

set -euo pipefail

# Check if mkcert is installed
if ! command -v mkcert &> /dev/null; then
  echo "mkcert is not installed. Please install it first:"
  echo "  # For MacOS:"
  echo "  brew install mkcert"
  echo ""
  echo "  # For Ubuntu/Debian:"
  echo "  sudo apt install libnss3-tools"
  echo "  curl -JLO \"https://dl.filippo.io/mkcert/latest?for=linux/amd64\""
  echo "  chmod +x mkcert-v*-linux-amd64"
  echo "  sudo cp mkcert-v*-linux-amd64 /usr/local/bin/mkcert"
  echo ""
  echo "  # For Fedora:"
  echo "  sudo dnf install nss-tools"
  echo "  curl -JLO \"https://dl.filippo.io/mkcert/latest?for=linux/amd64\""
  echo "  chmod +x mkcert-v*-linux-amd64"
  echo "  sudo cp mkcert-v*-linux-amd64 /usr/local/bin/mkcert"
  exit 1
fi

# Install local CA if not already installed
mkcert -install

# Create certs directory if it doesn't exist
mkdir -p docker/certs
cd docker/certs

# Generate certificates
echo "Generating certificates for flexile.dev..."
mkcert flexile.dev "*.flexile.dev" api.flexile.dev
mv flexile.dev+2.pem flexile_dev.crt
mv flexile.dev+2-key.pem flexile_dev.key

echo "SSL certificates generated successfully in docker/certs/"